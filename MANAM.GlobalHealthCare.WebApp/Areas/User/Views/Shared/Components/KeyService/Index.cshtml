@model MedicalEntityListViewModel

<section class="bg-white">
    <div class="container my-5">
        <h4 class="fw-bold">Các dịch vụ then chốt</h4>
        <div class="row g-4">

            @if (Model.Paged != null && Model.Paged.Items != null)
            {
                foreach (var item in Model.Paged.Items)
                {
                    <div class="col-12 col-md-6">
                        <div class="card h-100 card-hover mt-3" data-section="key-services-content">
                            <img src="/user/images//key-services/@item.AvatarUrl" class="card-img-top" alt="...">
                            <div class="card-body d-flex flex-column">
                                <div class="mb-3">
                                    @Html.Raw(item.IntroForHomePage)
                                </div>

                                <div class="mt-auto">
                                    <a class="text-decoration-none fs-6 primary-color" href="/@item.Slug">
                                        Tìm hiểu thêm <i class="bi bi-chevron-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>
