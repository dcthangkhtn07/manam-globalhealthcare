@model MedicalEntityListViewModel
@{
    string[] backgroundColors = ["fff8e6", "e7f2ff", "E3F8EC"];
}
<section class="advantages">
    <div class="container my-5">
        <div class="row g-4">
            <h1 class="text-center">Trung Tâm Trợ Giúp Bệnh Nhân Việt Đi Nước Ngoài</h1>
            <h5 class="text-center mt-2 primary-color">Sở Hữu Các Kênh Độc Quyền Ưu Tiên - Chuyên Bệnh Khó - Quyền Tiếp Cận Y Học Mới Nhất</h5>
            @if (Model.Paged.Items != null)
            {
                int index = 0;
                foreach (var item in Model.Paged.Items)
                {
                    if (item.Type != "Global")
                    {
                        <div class="col-12 col-md-4 mt-5">
                            <div class="card h-100 card-hover rounded-5" style="background-color: #@backgroundColors[index % backgroundColors.Length]">
                                <img src="/user/images/medical-services/@item.AvatarUrl" class="card-img-top rounded-top-custom" style="height: 275px" alt="Image">
                                <div class="card-body d-flex flex-column">
                                    <div class="mb-3">
                                        <h5 class="card-title fs-5 fw-bold primary-color">
                                            @item.Title
                                        </h5>
                                        <p class="card-text">@item.Description</p>
                                    </div>

                                    <div class="mt-auto">
                                        <a class="text-decoration-none fs-1 fw-bold premium-color" href="/@item.Slug">
                                            <i class="bi bi-arrow-right-circle-fill"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        index++;
                    }
                }
            }
        </div>
        @{
            var globalItem = Model.Paged.Items?.FirstOrDefault(i => i.Type == "Global");
            if (globalItem != null)
            {
                <div class="row g-4 mt-3">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <a class="btn btn-other me-3" href="/@globalItem.Slug">
                            CHỮA BỆNH TẠI NHIỀU QUỐC GIA KHÁC <i class="bi bi-caret-right-fill"></i>
                        </a>
                    </div>
                </div>
            }
        }
    </div>
</section>