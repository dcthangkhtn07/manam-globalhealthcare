<script>
    const text = "Đối Tác Y Tế Toàn Cầu";
    const element = document.querySelector(".typing-effect");

    let index = 0;
    let deleting = false;

    function animate() {
        if (!deleting) {
            element.textContent = text.substring(0, index + 1);
            index++;

            if (index === text.length) {
                deleting = true;
                setTimeout(animate, 2000);
                return;
            }
        } else {
            element.textContent = text.substring(0, index - 1);
            index--;

            if (index === 0) {
                deleting = false;
            }
        }

        setTimeout(animate, 50);
    }

    animate();
</script>

